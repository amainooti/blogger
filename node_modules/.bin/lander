#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/nodemon" ]; then
  "$basedir/nodemon"  "$basedir/../lander/bin/lander" "$@"
  ret=$?
else 
  nodemon  "$basedir/../lander/bin/lander" "$@"
  ret=$?
fi
exit $ret
